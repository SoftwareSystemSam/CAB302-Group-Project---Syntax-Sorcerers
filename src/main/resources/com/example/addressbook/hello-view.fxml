<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.HBox?>


<VBox alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.addressbook.GUI.LogInController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Welcome to My Screen Tracker.
  You must register an account and login to use this app."
           wrapText="true"/>

    <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
        <Button fx:id="loginButton"
                text="LogIn"
                onAction="#onLogInButtonClick"

        />
        <Button fx:id="signupButton"
                text="SignUp"
                onAction="#onSignUpButtonClick"

        />

    </HBox>
</VBox>