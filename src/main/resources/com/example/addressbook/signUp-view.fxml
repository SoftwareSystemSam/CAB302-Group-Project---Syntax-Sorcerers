<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.GridPane?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.addressbook.GUI.SignUp">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <VBox spacing="10.0" alignment="CENTER">

        <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="firstNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" promptText="Enter First Name"/>
        <Label text="Last Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="lastNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" promptText="Enter Last Name"/>
        <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="ageTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" promptText="Enter Your Age"/>
        <Label text="Email Address:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="emailTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" promptText="Enter Email"/>
        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4" promptText="Enter Password"/>

    </VBox>

    <Button alignment="CENTER" fx:id="backButton" text="Log In" onAction="#backButtonAction"/>
</VBox>