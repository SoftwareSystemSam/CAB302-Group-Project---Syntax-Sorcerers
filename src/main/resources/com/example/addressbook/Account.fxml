<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
        >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <VBox spacing="10.0" alignment="CENTER">
        <Label text="To reset your password, please enter your email address:" />
        <Label text="Email Address:" />
        <TextField fx:id="emailTextField" promptText="Enter Email"/>
        <Label text="Password:" />
        <PasswordField fx:id="passwordTextField" promptText="Enter Password"/>
    </VBox>

    <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="confirmButton" text="Confirm" onAction="#confirmButtonAction"/>
        <Button fx:id="backButton" text="Back" onAction="#onBack"/>
    </HBox>
</VBox>
